{
  "variables": {
    "PROFILE": "default",
    "REGION": "us-west-2",
    "BUILDER_INSTANCE_SIZE": "t2.small",
    "BUILDER_VOLUME_SIZE": 20
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "{{user `PROFILE`}}",
      "region": "{{user `REGION`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-*-20.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "instance_type": "{{user `BUILDER_INSTANCE_SIZE`}}",
      "ssh_username": "ubuntu",
      "ssh_timeout": "5m",
      "ami_name": "packer-ubuntu-myenv-{{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": "{{user `BUILDER_VOLUME_SIZE`}}",
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Base_AMI_ID": "{{ .SourceAMI }}",
        "Base_AMI_NAME": "{{ .SourceAMIName }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update",
        "sudo apt-get -y install python3-distutils ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "./",
      "playbook_file": "./playbook.yml",
      "extra_arguments": []
    }
  ]
}